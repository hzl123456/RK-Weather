<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/child_pager_height"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/child_pager_cicle_height">

        <cn.xmrk.weather.view.AqiView
            android:id="@+id/aqiview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_aqi_intro"
                style="@style/DataTextView"
                android:text="空气自粮油"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/tv_aqi_level"
                style="@style/DataTextView"
                android:text="AQI:34" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_aqi_pm2"
            style="@style/DataTextView"
            android:text="AQI:34" />

        <TextView
            android:id="@+id/tv_aqi_pm10"
            style="@style/DataTextView"
            android:text="AQI:34" />

        <TextView
            android:id="@+id/tv_aqi_s02"
            style="@style/DataTextView"
            android:text="AQI:34" />

        <TextView
            android:id="@+id/tv_aqi_no2"
            style="@style/DataTextView"
            android:text="AQI:34" />

    </LinearLayout>

</LinearLayout>