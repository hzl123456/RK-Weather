<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_containert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" />

    <cn.xmrk.weather.view.TemperatureView
        android:id="@+id/tem_high"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:TemperatureViewPadding="15dp"
        app:TemperatureViewPaddingLR="25dp"
        app:TemperatureViewTextDown="false"
        app:TemperatureViewWidth="2dp" />

    <cn.xmrk.weather.view.TemperatureView
        android:id="@+id/tem_low"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        app:TemperatureViewPadding="15dp"
        app:TemperatureViewPaddingLR="25dp"
        app:TemperatureViewTextDown="true"
        app:TemperatureViewWidth="2dp" />
</LinearLayout>