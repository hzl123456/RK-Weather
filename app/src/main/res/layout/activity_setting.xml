<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/bg_drawable_divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:id="@+id/layout_update"
        style="@style/SettingLayout">

        <TextView
            android:id="@+id/tv_auto_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/cb_auto_update"
            android:text="自动更新"
            android:textColor="@color/bg_title_bar"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_auto_update"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/cb_auto_update"
            android:text="开启可以自动更新天气信息"
            android:textColor="@color/color_text_grey" />

        <CheckBox
            android:id="@+id/cb_auto_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:buttonTint="@color/bg_title_bar"
            android:clickable="false"
            android:focusable="false" />

    </RelativeLayout>

    <RelativeLayout style="@style/SettingLayout">

        <TextView
            android:id="@+id/tv_update_time_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更新时间间隔"
            android:textColor="@color/bg_title_bar"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_update_time_title"
            android:layout_marginTop="3dp"
            android:text="1小时"
            android:textColor="@color/color_text_grey" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_notice"
        style="@style/SettingLayout">

        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/cb_notice"
            android:text="通知栏"
            android:textColor="@color/bg_title_bar"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_notice_title"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/cb_notice"
            android:text="开启通知栏，在通知栏显示天气信息"
            android:textColor="@color/color_text_grey" />

        <CheckBox
            android:id="@+id/cb_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:buttonTint="@color/bg_title_bar"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

    <RelativeLayout style="@style/SettingLayout">

        <TextView
            android:id="@+id/tv_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开发者"
            android:textColor="@color/bg_title_bar"
            android:textSize="@dimen/text_middle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_developer"
            android:layout_marginTop="3dp"
            android:text="邮箱：mail@hezhilin.cc"
            android:textColor="@color/color_text_grey" />

    </RelativeLayout>

</LinearLayout>